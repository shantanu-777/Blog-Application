@page "/trending"
@attribute [Authorize]
@inject IBlogService BlogService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Trending - BlogApp</PageTitle>

<div class="medium-page">
    <div class="medium-page-header">
        <h1>Trending Now</h1>
        <p>Discover the most popular stories from our community</p>
    </div>

    <div class="medium-trending-filters">
        <button class="medium-filter-btn active">This Week</button>
        <button class="medium-filter-btn">This Month</button>
        <button class="medium-filter-btn">All Time</button>
    </div>

    <div class="medium-posts-list">
        @if (isLoading)
        {
            @for (int i = 0; i < 6; i++)
            {
                <div class="medium-post-skeleton" />
            }
        }
        else if (posts.Any())
        {
            @foreach (var post in posts)
            {
                <div class="medium-post-card" @onclick="() => NavigateToPost(post.Slug)">
                    @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                    {
                        <img src="@post.FeaturedImageUrl" alt="@post.Title" class="medium-post-img" />
                    }
                    <div class="medium-post-content">
                        <div class="medium-post-badge">üî• Trending</div>
                        <h3>@post.Title</h3>
                        <p class="medium-post-excerpt">@post.Excerpt</p>
                        <div class="medium-post-meta">
                            <div class="medium-post-author">
                                @if (post.Author?.AvatarUrl != null)
                                {
                                    <img src="@post.Author.AvatarUrl" alt="@post.Author.DisplayName" class="medium-avatar" />
                                }
                                <div>
                                    <span>@post.Author?.DisplayName</span>
                                    <span class="medium-post-date">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            <div class="medium-post-stats">
                                <span>üíô @post.LikesCount</span>
                                <span>üí¨ @post.CommentsCount</span>
                                <span>‚è±Ô∏è @post.ReadingTimeMinutes min</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="medium-empty-state">
                <p>No trending posts yet. Be the first to create engaging content!</p>
                @if (isAuthenticated)
                {
                    <a href="/write" class="medium-btn medium-btn-primary">Write Your First Post</a>
                }
            </div>
        }
    </div>

    @if (hasMorePosts && !isLoading)
    {
        <div class="medium-load-more">
            <button class="medium-btn medium-btn-outline" @onclick="LoadMorePosts" disabled="@isLoadingMore">
                @if (isLoadingMore)
                {
                    <span>Loading...</span>
                }
                else
                {
                    <span>Load More</span>
                }
            </button>
        </div>
    }
</div>

@code {
    private List<BlogPost> posts = new();
    private bool isLoading = true;
    private bool isLoadingMore = false;
    private bool hasMorePosts = false;
    private bool isAuthenticated = false;
    private int currentPage = 1;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        await LoadTrendingPosts();
    }

    private async Task LoadTrendingPosts()
    {
        try
        {
            posts = await BlogService.GetTrendingPostsAsync(10);
            hasMorePosts = posts.Count >= 10;
        }
        catch (Exception)
        {
            // Use sample data if backend fails
            LoadSampleTrendingPosts();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadMorePosts()
    {
        isLoadingMore = true;
        currentPage++;
        
        try
        {
            // Implement pagination if needed
            await Task.Delay(500); // Simulate loading
        }
        finally
        {
            isLoadingMore = false;
        }
    }

    private void NavigateToPost(string? slug)
    {
        if (!string.IsNullOrEmpty(slug))
        {
            Navigation.NavigateTo($"/post/{slug}");
        }
    }

