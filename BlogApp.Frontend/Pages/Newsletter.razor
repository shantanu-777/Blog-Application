@page "/newsletter"
@inject INewsletterService NewsletterService
@inject ISnackbar Snackbar

<PageTitle>Newsletter - BlogApp</PageTitle>

<div class="medium-page">
    <div class="medium-newsletter-container">
        <div class="medium-newsletter-header">
            <h1>Subscribe to Our Newsletter</h1>
            <p>Get the latest posts and updates delivered to your inbox</p>
        </div>

        <div class="medium-newsletter-form">
            <div class="medium-form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" @bind="email" class="medium-input" placeholder="your.email@example.com" />
            </div>

            <div class="medium-form-group">
                <label for="name">Name (Optional)</label>
                <input type="text" id="name" @bind="name" class="medium-input" placeholder="Your name" />
            </div>

            <button class="medium-btn medium-btn-primary" @onclick="Subscribe" disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span>Subscribing...</span>
                }
                else
                {
                    <span>Subscribe</span>
                }
            </button>

            @if (isSubscribed)
            {
                <div class="medium-success-message">
                    <p>âœ“ You're subscribed! Check your email for confirmation.</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string email = string.Empty;
    private string? name;
    private bool isSubmitting = false;
    private bool isSubscribed = false;

    private async Task Subscribe()
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            Snackbar.Add("Please enter your email address", Severity.Warning);
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            var success = await NewsletterService.SubscribeAsync(email, name);
            if (success)
            {
                isSubscribed = true;
                Snackbar.Add("Successfully subscribed to newsletter!", Severity.Success);
                email = string.Empty;
                name = null;
            }
            else
            {
                Snackbar.Add("Failed to subscribe. Please try again later.", Severity.Error);
            }
        }
        catch (Exception)
        {
            Snackbar.Add("An error occurred. Please try again later.", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }
}

