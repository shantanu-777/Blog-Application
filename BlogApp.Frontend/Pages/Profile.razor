                                </svg>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(user.GitHub))
                        {
                            <a href="@user.GitHub" target="_blank" class="profile-link" title="GitHub">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
