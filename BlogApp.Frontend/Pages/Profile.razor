                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            <h3>No posts yet</h3>
                            <p>@(user.DisplayName ?? user.Username) hasn't published any posts yet.</p>
                            @if (isOwnProfile)
                            {
                                <a href="/write" class="btn btn-primary">Write Your First Post</a>
                            }
                        </div>
                    }
                </div>
            }
            else if (activeTab == "about")
            {
                <div class="profile-about">
                    @if (!string.IsNullOrEmpty(user.Bio))
                    {
                        <div class="about-section">
                            <h3>About</h3>
                            <p>@user.Bio</p>
                        </div>
                    }
                    
                    <div class="about-section">
                        <h3>Member since</h3>
                        <p>@user.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</p>
                    </div>

                    <div class="about-section">
                        <h3>Statistics</h3>
                        <div class="about-stats-grid">
                            <div class="about-stat-item">
                                <span class="about-stat-label">Posts</span>
                                <span class="about-stat-value">@user.PostsCount</span>
                            </div>
                            <div class="about-stat-item">
                                <span class="about-stat-label">Followers</span>
                                <span class="about-stat-value">@user.FollowersCount</span>
                            </div>
                            <div class="about-stat-item">
                                <span class="about-stat-label">Following</span>
                                <span class="about-stat-value">@user.FollowingCount</span>
                            </div>
                            <div class="about-stat-item">
                                <span class="about-stat-label">Total likes</span>
                                <span class="about-stat-value">@user.LikesCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string? Username { get; set; }

    private User? user;
    private List<BlogPost> userPosts = new();
    private bool isLoadingProfile = true;
    private bool isLoadingPosts = true;
    private bool isOwnProfile = false;
    private bool isFollowing = false;
    private string activeTab = "posts";
    private User? currentUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        isLoadingProfile = true;
        
        try
        {
            currentUser = await AuthService.GetCurrentUserAsync();

            if (string.IsNullOrEmpty(Username))
            {
                user = currentUser;
                isOwnProfile = true;
                await LoadUserPosts();
            }
            else
            {
                user = await UserService.GetUserByUsernameAsync(Username);
                isOwnProfile = currentUser?.Username == user?.Username;
                if (user != null)
                {
                    await LoadUserPosts();
                    isFollowing = (currentUser != null)
                        && await UserService.IsFollowingAsync(currentUser.Id, user.Id);
                }
            }
        }
        catch (Exception)
        {
            user = null;
        }
        finally
        {
            isLoadingProfile = false;
            StateHasChanged();
        }
    }

    private async Task LoadUserPosts()
    {
        if (user == null) return;

        isLoadingPosts = true;
        try
        {
            userPosts = await BlogService.GetPostsByAuthorAsync(user.Id);
        }
        catch
        {
            userPosts = new();
        }
        finally
        {
            isLoadingPosts = false;
        }
    }

    private void SwitchTab(string tab)
    {
        activeTab = tab;
    }

    private async Task ToggleFollow()
    {
        if (user == null || currentUser == null || isOwnProfile) return;

        try
        {
            if (isFollowing)
            {
                await UserService.UnfollowUserAsync(currentUser.Id, user.Id);
                user.FollowersCount--;
            }
            else
            {
                await UserService.FollowUserAsync(currentUser.Id, user.Id);
                user.FollowersCount++;
            }
            isFollowing = !isFollowing;
        }
        catch
        {
            Snackbar.Add("Error updating follow state.", Severity.Error);
        }
    }

    private void EditProfile()
    {
        Navigation.NavigateTo("/profile/edit");
    }

    private void NavigateToPost(string? slug)
    {
        if (!string.IsNullOrEmpty(slug))
        {
            Navigation.NavigateTo($"/post/{slug}");
        }
    }
}

