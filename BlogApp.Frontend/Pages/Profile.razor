                <button class="profile-tab @(activeTab == "posts" ? "active" : "")" @onclick='() => SwitchTab("posts")'>
                    Posts
                </button>
                <button class="profile-tab @(activeTab == "about" ? "active" : "")" @onclick='() => SwitchTab("about")'>
                    About
                </button>
            </div>

            @if (activeTab == "posts")
            {
                <div class="profile-posts">
                    @if (isLoadingPosts)
                    {
                        @for (int i = 0; i < 3; i++)
                        {
                            <div class="post-card-skeleton" />
                        }
                    }
                    else if (userPosts.Any())
                    {
                        @foreach (var post in userPosts)
                        {
                            <div class="post-card" @onclick="() => NavigateToPost(post.Slug)">
                                @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                                {
                                    <img src="@post.FeaturedImageUrl" alt="@post.Title" class="post-card-image" />
                                }
                                <div class="post-card-content">
                                    <h3 class="post-card-title">@post.Title</h3>
                                    <p class="post-card-excerpt">@post.Excerpt</p>
                                    <div class="post-card-meta">
                                        <span>@post.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                        <span>â€¢</span>
                                        <span>@post.ReadingTimeMinutes min read</span>
                                        <span>â€¢</span>
                                        <span>ðŸ’™ @post.LikesCount</span>
                                        <span>â€¢</span>
                                        <span>ðŸ’¬ @post.CommentsCount</span>
                                    </div>
                                </div>
                            </div>
                        }
