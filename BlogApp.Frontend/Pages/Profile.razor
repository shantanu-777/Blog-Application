                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                        {
                            <img src="@user.AvatarUrl" alt="@user.DisplayName" class="profile-avatar" />
                        }
                        else
                        {
                            <div class="profile-avatar profile-avatar-placeholder">
                                @(user.DisplayName?[0] ?? user.Username[0])
                            </div>
                        }
                        @if (isOwnProfile)
                        {
