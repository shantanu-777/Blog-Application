@page "/contact"
@inject IContactService ContactService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>Contact Us - BlogApp</PageTitle>

<div class="medium-page">
    <div class="medium-contact-container">
        <div class="medium-contact-header">
            <h1>Contact Us</h1>
            <p>Have a question or feedback? We'd love to hear from you!</p>
        </div>

        <div class="medium-contact-form">
            <div class="medium-form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" @bind="name" class="medium-input" placeholder="Your name" />
            </div>

            <div class="medium-form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" @bind="email" class="medium-input" placeholder="your.email@example.com" />
            </div>

            <div class="medium-form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" @bind="subject" class="medium-input" placeholder="What's this about?" />
            </div>

            <div class="medium-form-group">
                <label for="message">Message *</label>
                <textarea id="message" @bind="message" class="medium-textarea" rows="8" placeholder="Your message..."></textarea>
            </div>

            <button class="medium-btn medium-btn-primary" @onclick="SubmitForm" disabled="@isSubmitting">
                @if (isSubmitting)
                {
                    <span>Sending...</span>
                }
                else
                {
                    <span>Send Message</span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    private string name = string.Empty;
    private string email = string.Empty;
    private string? subject;
    private string message = string.Empty;
    private bool isSubmitting = false;

    private async Task SubmitForm()
    {
        if (string.IsNullOrWhiteSpace(name) || string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(message))
        {
            Snackbar.Add("Please fill in all required fields", Severity.Warning);
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            var success = await ContactService.SubmitContactFormAsync(name, email, subject, message);
            if (success)
            {
                Snackbar.Add("Thank you! Your message has been sent successfully.", Severity.Success);
                name = string.Empty;
                email = string.Empty;
                subject = null;
                message = string.Empty;
            }
            else
            {
                Snackbar.Add("Failed to send message. Please try again later.", Severity.Error);
            }
        }
        catch (Exception)
        {
            Snackbar.Add("An error occurred. Please try again later.", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }
}

