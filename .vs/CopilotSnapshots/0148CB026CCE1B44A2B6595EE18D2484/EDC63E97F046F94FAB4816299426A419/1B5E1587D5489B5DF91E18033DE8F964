@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Sign Up - BlogApp</PageTitle>

<div class="medium-auth-container">
    <div class="medium-auth-card">
        <h2 class="medium-auth-title">Create your BlogApp account</h2>
        <form>
            <div class="medium-auth-field">
                <label for="email">Email</label>
                <input id="email" type="email" class="medium-auth-input" @bind="email" required />
            </div>
            <div class="medium-auth-field">
                <label for="username">Username</label>
                <input id="username" type="text" class="medium-auth-input" @bind="username" required />
            </div>
            <div class="medium-auth-field">
                <label for="displayName">Display Name (Optional)</label>
                <input id="displayName" type="text" class="medium-auth-input" @bind="displayName" />
            </div>
            <div class="medium-auth-field">
                <label for="password">Password</label>
                <input id="password" type="password" class="medium-auth-input" @bind="password" required />
            </div>
            <div class="medium-auth-field">
                <label for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" type="password" class="medium-auth-input" @bind="confirmPassword" required />
            </div>
            <div class="medium-auth-field medium-auth-checkbox">
                <input id="agreeToTerms" type="checkbox" @bind="agreeToTerms" />
                <label for="agreeToTerms">I agree to the <a href="/terms" target="_blank" class="medium-link">Terms of Service</a> and <a href="/privacy" target="_blank" class="medium-link">Privacy Policy</a></label>
            </div>
            <button type="button" class="medium-btn medium-btn-primary medium-auth-btn" @onclick="HandleRegister" disabled="@(isLoading || !agreeToTerms)">
                @if (isLoading)
                {
                    <span class="medium-auth-spinner"></span>
                }
                Create Account
            </button>
        </form>
        <div class="medium-auth-divider"></div>
        <div class="medium-auth-footer">
            <span>Already have an account?</span>
            <a href="/login" class="medium-link">Sign in here</a>
        </div>
    </div>
</div>

@code {
    private string email = string.Empty;
    private string username = string.Empty;
    private string displayName = string.Empty;
    private string password = string.Empty;
    private string confirmPassword = string.Empty;
    private bool agreeToTerms = false;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        if (!agreeToTerms || string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password) || password != confirmPassword) return;
        isLoading = true;
        try
        {
            var success = await AuthService.RegisterAsync(email, password, username, displayName);
            if (success)
            {
                Snackbar.Add("Account created successfully! Welcome to BlogApp!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else
            {
                Snackbar.Add("Failed to create account. Please try again.", Severity.Error);
            }
        }
        catch (Exception)
        {
            Snackbar.Add("An error occurred during registration", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}

