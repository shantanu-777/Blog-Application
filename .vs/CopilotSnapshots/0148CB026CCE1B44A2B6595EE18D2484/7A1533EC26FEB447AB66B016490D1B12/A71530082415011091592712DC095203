@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Sign Up - BlogApp</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudCard Class="pa-8">
        <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 600;">
            Join BlogApp
        </MudText>
        <MudText Typo="Typo.body1" Class="text-center mb-8" Style="color: #666;">
            Create your account and start writing amazing content
        </MudText>

        <MudForm @ref="form" @bind-IsValid="@isValid" @bind-Errors="@errors">
            <MudTextField @bind-Value="email"
                         Label="Email"
                         Variant="Variant.Outlined"
                         For="@(() => email)"
                         Required="true"
                         RequiredError="Email is required"
                         Email="true"
                         EmailError="Please enter a valid email"
                         Class="mb-4" />

            <MudTextField @bind-Value="username"
                         Label="Username"
                         Variant="Variant.Outlined"
                         For="@(() => username)"
                         Required="true"
                         RequiredError="Username is required"
                         Class="mb-4" />

            <MudTextField @bind-Value="displayName"
                         Label="Display Name (Optional)"
                         Variant="Variant.Outlined"
                         Class="mb-4" />

            <MudTextField @bind-Value="password"
                         Label="Password"
                         Variant="Variant.Outlined"
                         InputType="InputType.Password"
                         For="@(() => password)"
                         Required="true"
                         RequiredError="Password is required"
                         Class="mb-4" />

            <MudTextField @bind-Value="confirmPassword"
                         Label="Confirm Password"
                         Variant="Variant.Outlined"
                         InputType="InputType.Password"
                         For="@(() => confirmPassword)"
                         Required="true"
                         RequiredError="Please confirm your password"
                         Class="mb-6" />

            <MudCheckBox @bind-Checked="agreeToTerms" Class="mb-6">
                I agree to the <MudLink Href="/terms" Target="_blank">Terms of Service</MudLink> and <MudLink Href="/privacy" Target="_blank">Privacy Policy</MudLink>
            </MudCheckBox>

            <MudButton Variant="Variant.Filled"
                      Color="Color.Primary"
                      FullWidth="true"
                      Size="Size.Large"
                      Disabled="@(isLoading || !agreeToTerms)"
                      OnClick="HandleRegister"
                      Class="mb-4">
                @if (isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                }
                Create Account
            </MudButton>

            <MudDivider Class="my-6" />

            <div class="text-center">
                <MudText Typo="Typo.body2" Style="color: #666;">
                    Already have an account?
                    <MudLink Href="/login" Class="text-decoration-none">
                        Sign in here
                    </MudLink>
                </MudText>
            </div>
        </MudForm>
    </MudCard>
</MudContainer>

@code {
    private MudForm form = new();
    private bool isValid = true;
    private string[] errors = { };
    private string email = string.Empty;
    private string username = string.Empty;
    private string displayName = string.Empty;
    private string password = string.Empty;
    private string confirmPassword = string.Empty;
    private bool agreeToTerms = false;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        if (!isValid || !agreeToTerms) return;

        if (password != confirmPassword)
        {
            Snackbar.Add("Passwords do not match", Severity.Error);
            return;
        }

        isLoading = true;
        try
        {
            var success = await AuthService.RegisterAsync(email, password, username, displayName);
            if (success)
            {
                Snackbar.Add("Account created successfully! Welcome to BlogApp!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else
            {
                Snackbar.Add("Failed to create account. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("An error occurred during registration", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}
