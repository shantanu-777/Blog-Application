@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Login - BlogApp</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudCard Class="pa-8">
        <MudText Typo="Typo.h4" Class="text-center mb-6" Style="font-weight: 600;">
            Welcome Back
        </MudText>
        <MudText Typo="Typo.body1" Class="text-center mb-8" Style="color: #666;">
            Sign in to your BlogApp account
        </MudText>

        <MudForm @ref="form" @bind-IsValid="@isValid" @bind-Errors="@errors">
            <MudTextField @bind-Value="email"
                         Label="Email"
                         Variant="Variant.Outlined"
                         For="@(() => email)"
                         Required="true"
                         RequiredError="Email is required"
                         Email="true"
                         EmailError="Please enter a valid email"
                         Class="mb-4" />

            <MudTextField @bind-Value="password"
                         Label="Password"
                         Variant="Variant.Outlined"
                         InputType="InputType.Password"
                         For="@(() => password)"
                         Required="true"
                         RequiredError="Password is required"
                         Class="mb-6" />

            <MudButton Variant="Variant.Filled"
                      Color="Color.Primary"
                      FullWidth="true"
                      Size="Size.Large"
                      Disabled="@isLoading"
                      OnClick="HandleLogin"
                      Class="mb-4">
                @if (isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                }
                Sign In
            </MudButton>

            <div class="text-center mb-4">
                <MudLink Href="/forgot-password" Class="text-decoration-none">
                    Forgot your password?
                </MudLink>
            </div>

            <MudDivider Class="my-6" />

            <div class="text-center">
                <MudText Typo="Typo.body2" Style="color: #666;">
                    Don't have an account?
                    <MudLink Href="/register" Class="text-decoration-none">
                        Sign up here
                    </MudLink>
                </MudText>
            </div>
        </MudForm>
    </MudCard>
</MudContainer>

@code {
    private MudForm form = new();
    private bool isValid = true;
    private string[] errors = { };
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        if (!isValid) return;

        isLoading = true;
        try
        {
            var success = await AuthService.LoginAsync(email, password);
            if (success)
            {
                Snackbar.Add("Welcome back!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else
            {
                Snackbar.Add("Invalid email or password", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("An error occurred during login", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}
