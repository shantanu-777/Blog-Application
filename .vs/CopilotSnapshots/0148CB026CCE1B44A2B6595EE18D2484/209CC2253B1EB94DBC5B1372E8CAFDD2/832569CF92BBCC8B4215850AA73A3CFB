@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<PageTitle>Login - BlogApp</PageTitle>

<div class="medium-auth-container">
    <div class="medium-auth-card">
        <h2 class="medium-auth-title">Sign in to BlogApp</h2>
        <form>
            <div class="medium-auth-field">
                <label for="email">Email</label>
                <input id="email" type="email" class="medium-auth-input" @bind="email" required />
            </div>
            <div class="medium-auth-field">
                <label for="password">Password</label>
                <input id="password" type="password" class="medium-auth-input" @bind="password" required />
            </div>
            <button type="button" class="medium-btn medium-btn-primary medium-auth-btn" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="medium-auth-spinner"></span>
                }
                Sign In
            </button>
        </form>
        <div class="medium-auth-links">
            <a href="/forgot-password" class="medium-link">Forgot your password?</a>
        </div>
        <div class="medium-auth-divider"></div>
        <div class="medium-auth-footer">
            <span>Don't have an account?</span>
            <a href="/register" class="medium-link">Sign up here</a>
        </div>
    </div>
</div>

@code {
    private string email = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password)) return;
        isLoading = true;
        try
        {
            var success = await AuthService.LoginAsync(email, password);
            if (success)
            {
                Snackbar.Add("Welcome back!", Severity.Success);
                Navigation.NavigateTo("/");
            }
            else
            {
                Snackbar.Add("Invalid email or password", Severity.Error);
            }
        }
        catch (Exception)
        {
            Snackbar.Add("An error occurred during login", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }
}

